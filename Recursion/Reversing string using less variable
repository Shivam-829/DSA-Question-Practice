#include<iostream>
using namespace std;
void reverseWord(string &str,int i){
  int k=str.length()-i;
if(i>=k)
  return;
  swap(str[i],str[k-1]);
  i++;
  reverseWord(str,i);
  
}
int main(){
string word;
cout<<"Enter the word to reverse it:"<<endl;
cin>>word;
reverseWord(word,0);
cout<<endl<<word<<endl;
cout<<endl<<word.length()<<endl;
return 0;
}
